@model CreatCourseVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card m-5" style="width:60rem;margin:auto;">
    <div class="card-body">
        <form method="post" asp-controller="Course" asp-action="Create">

            <div class="mb-3">
                <div class="mb-3">
                    <label asp-for="Grade" class="form-label"> Grade</label>
                    <input type="text" asp-for="Grade" class="form-control">
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="TraineID" class="control-label">Traine</label>
                <select asp-for="TraineID" class="form-control" asp-items="ViewBag.Trainers"></select>
            </div>

            <div class="row">
                <div class="col-8">
                </div>
                <div class="col-4 text-end">
                    <a onclick="addInput()" class="btn btn-dark p-1  m-2 pull-right">Add Topic <i class="fa-solid fa-plus"></i></a>

                </div>
            </div>
            <div id="Topic">
            </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>

        </form>
        </<div>
        </div>

        @section JS {
            <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
            <script src="~/js/validation-styling.js"></script>
            <script>
                let topicIndex = 0; 
                function addInput() {
                    var input = document.createElement("input");
                    input.type = "text";
                    input.name = `Topics[${topicIndex}].Name`;
                    input.className = "form-control";
                    input.placeholder = "Enter topic name"; 
                   
                    var div = document.createElement("div");
                    div.className = "mb-3"; // Use Bootstrap's margin bottom class for spacing
                    div.appendChild(input);
                    // div.appendChild(CrID);
                    var parentDiv = document.getElementById("Topic");
                    parentDiv.appendChild(div); // Append the new input div to the parent

                    topicIndex++; // Increment the index for the next topic
                }
            </script>
        }

