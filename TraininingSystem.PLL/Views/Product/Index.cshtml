@model List<GetAllProductVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS {
    <style>
        .bg-image {
            overflow: hidden;
            position: relative;
        }

        .hover-zoom-image {
            transition: transform 0.5s;
        }

            .hover-zoom-image:hover {
                transform: scale(1.1); 
            }

        .row .col-lg-4 {
            padding: 0 10px; 
        }

        .card {
            margin-bottom: 20px;
        }

        .card-body {
            padding: 15px;
        }

        .badge {
            font-size: 14px;
        }

        .mask {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .bg-image:hover .mask {
            opacity: 1;
        }
    </style>
}

<section style="background-color: #eee;">
    <div class="text-center container py-5">
        <a asp-action="Create" asp-controller="Product"><h4 class="mt-4 mb-5  btn btn-dark">Bestsellers</h4></a>
        <div class="row">
            @foreach (var item in Model)
            {
                <partial name="~/Views/Product/Card.cshtml" model="item" />
            }
        </div>
    </div>
</section>
