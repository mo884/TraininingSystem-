@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card m-5" style="width:60rem;margin:auto;">
    <div class="card-body">

        <form id="sign_up" method="POST" asp-controller="Account" asp-action="Login">
            <center>
                <div class="msg text-success"><h1>Login</h1></div>

            </center>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label"> UserName</label>
                    <input type="text" class="form-control" asp-for="UserName" placeholder="UserName" required autofocus>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"> Email</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Email Address" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
          
                <div class="mb-3">
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"> Password</label>
                        <input type="password" class="form-control" asp-for="Password" minlength="6" placeholder="Password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
              
                <div class="form-check">
                <input type="checkbox" class="form-check-inpu" asp-for="RememberMe">
                    <label asp-for="RememberMe" class="form-check-label" for="flexCheckDefault">
                        Default checkbox
                    </label>
                </div>
                <center>
                <input type="submit" value="SIGN UP" class="btn btn-success" />

                </center>

                <div class="m-t-25 m-b--5 align-center">
                    <center>
                    <a style="text-decoration:none" class="text-success" asp-controller="Account" asp-action="Registration">I don't have Account</a>
                    <br />
                    <a style="text-decoration:none" class="text-success" asp-controller="Account" asp-action="ForgetPassword">I Forget Password</a>

                    </center>
               
                </div>
        </form>

    </div>
</div>